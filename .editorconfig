root = true
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.nix]
indent_style = space
indent_size = 2

[*.gitconfig]
indent_style = tab

[*.{sh,zsh}]
indent_style = space
indent_size = 2

# 2 space indentation
[*.{json,y{a,}ml,toml}]
indent_style = space
indent_size = 2
